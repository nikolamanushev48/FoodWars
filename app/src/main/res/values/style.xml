<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_edit_text</item>
        <item name="android:maxLength">60</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginLeft">@dimen/margin_register_text</item>
        <item name="android:layout_marginRight">@dimen/margin_register_text</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_buttons</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSingleLine">
        <item name="android:lines">1</item>
    </style>

</resources>